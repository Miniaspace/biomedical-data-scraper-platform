# Environment Variables Configuration
#
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!

# ============================================================================
# Airflow Configuration
# ============================================================================
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW_IMAGE_NAME=apache/airflow:2.8.1-python3.11

# Airflow database connection
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:5432/airflow

# Airflow executor (LocalExecutor or CeleryExecutor for distributed)
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Airflow webserver
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here_change_this

# Airflow admin credentials
AIRFLOW_ADMIN_USERNAME=airflow
AIRFLOW_ADMIN_PASSWORD=airflow
AIRFLOW_ADMIN_EMAIL=admin@example.com

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# Redis Configuration (for Celery)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# MinIO Configuration (Object Storage)
# ============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=scraped-data

# ============================================================================
# Authentication & Security
# ============================================================================
# Generate with: python common/auth/auth_manager.py
CREDENTIAL_ENCRYPTION_KEY=your_encryption_key_here

# ============================================================================
# Scraping Configuration
# ============================================================================
# User agent for web scraping
USER_AGENT=Mozilla/5.0 (compatible; BiomedicalResearchBot/1.0; +https://github.com/yourusername/biomedical-data-scraper-platform)

# Proxy configuration (optional)
HTTP_PROXY=
HTTPS_PROXY=

# Rate limiting
DEFAULT_DOWNLOAD_DELAY=2
CONCURRENT_REQUESTS=8

# ============================================================================
# Monitoring & Alerting
# ============================================================================
# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_TO=admin@example.com

# Slack notifications (optional)
SLACK_WEBHOOK_URL=

# ============================================================================
# AI Assistant Configuration (optional)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Data Storage Paths
# ============================================================================
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
LOG_DIR=./data/logs

# ============================================================================
# Development Settings
# ============================================================================
DEBUG=false
ENVIRONMENT=production  # development, staging, production
