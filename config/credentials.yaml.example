# Credentials Configuration Template
#
# Copy this file to credentials.yaml and fill in your actual credentials.
# NEVER commit credentials.yaml to version control!
#
# Supported authentication methods:
# - basic: username/password
# - api_key: API key authentication
# - oauth: OAuth 2.0
# - session: Session token
#
# For encrypted storage, set CREDENTIAL_ENCRYPTION_KEY environment variable.
# Generate a key with: python common/auth/auth_manager.py

# Example: Basic authentication
openicpsr:
  auth_method: "basic"
  username: "your_username"
  password: "your_password"
  # If using encryption, password will be stored as: enc:encrypted_value

# Example: API key authentication
example_api_platform:
  auth_method: "api_key"
  api_key: "your_api_key_here"

# Example: OAuth authentication
example_oauth_platform:
  auth_method: "oauth"
  client_id: "your_client_id"
  client_secret: "your_client_secret"
  token_url: "https://platform.com/oauth/token"
  scope: "read write"

# Example: Session token
example_session_platform:
  auth_method: "session"
  session_token: "your_session_token"
  cookie_name: "session_id"

# Add credentials for all platforms that require authentication
yoda:
  auth_method: "basic"
  username: "your_yoda_username"
  password: "your_yoda_password"

vivli:
  auth_method: "basic"
  username: "your_vivli_username"
  password: "your_vivli_password"

dbgap:
  auth_method: "basic"
  username: "your_dbgap_username"
  password: "your_dbgap_password"
  # dbGaP may also require additional authentication tokens
  access_token: "your_access_token"

# Template for additional platforms
# platform_name:
#   auth_method: "basic"  # or "api_key", "oauth", "session"
#   username: "username"
#   password: "password"
#   # Add other fields as needed for specific auth methods
